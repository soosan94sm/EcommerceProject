<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Admin</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="/admin/assets/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="/admin/assets/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <link rel="stylesheet" href="/admin/assets/vendors/select2/select2.min.css">
  <link rel="stylesheet" href="/admin/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <!-- endinject -->
  <!-- Layout styles -->
  <link rel="stylesheet" href="/admin/assets/css/style.css">
  <!-- End layout styles -->
  <link rel="shortcut icon" href="/admin/assets/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">

    <%- include('./nav')-%>
    
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h3 class="mb-5 ml-5">Banner</h3>
        <a href="/admin/banner/addBanner" class="btn  btn-outline-success" style="height: 40px; width: 200px; margin-top: 35px;">Add Banner</a>
    </div>

    <% if (locals.message) { %>
    <div class="alert alert-danger">
        <strong><%= message %></strong>
    </div>
    <% } %>

    <div class="d-flex ">
        <form action="/admin/banner/search" method="post" class="d-flex ms-2 me-2" role="search">
            <input class="form-control me-2 border-success" type="text" placeholder="Search Banner" id="search" name="search">
            <button class="btn btn-success" type="submit">Search</button>
        </form>
    </div>

    <table class="table table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Banner Name</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% banner.forEach(item => { %>
            <tr>
                <td class="text-capitalize"><%= item.bannerName %></td>
                <td><img src="/admin/assets/uploads/<%= item.image %>" alt="<%= item.bannerName %>" style="width: 80px;height: 80px;"></td>
                <td><%= item.title %></td>
                <td><%= item.subtitle %></td>
                <td>
                    <a href="/admin/banner/delete?id=<%= item._id %>" class="btn btn-danger">Remove</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="align-items-center" id="pagination">
        <nav aria-label="Page navigation example" style="width: 30%; margin: auto;">
            <p class="text-center">Page <%= currentPage %> of <%= totalPages %></p>
            <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                    <li class="page-item ">
                        <a class="page-link" href="?page=1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= totalPages %>">Last</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>

   
</body>
</html>