  <body>
    <div class="container-scroller">
<%- include('./nav')%>

<div class="container formBg" >
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center pt-5" id="login">
          <div class="container border py-5">
            <div class="title ">
              <h2 class="font-weight-bold">Edit Category</h2>
            </div>
            
            <form action="" method="post" class="pt-3" id="'form" >
             
            
              <div class="form-group ">
                <input type="hidden" class="form-control" value="<%= category._id %>"  name="categoryIdentity" ><br> 
              </div>
             
              <div class="form-group">
                <input type="text" class="form-control" value="<%= category.categoryId %>"  name="categoryId" ><br> 
              </div>
             
              <div class="form-group">
                <input type="text" id="email-error" class="form-control" value="<%=category.categoryName %>" name="categoryName" required><br>
              </div>
              <div class="form-group">
                <input type="text" id="password-error" class="form-control" name="quantity" value="<%=category.quantity %>"  required><br>
              </div>      
              <div class="form-group text-center">
                <button type="submit" class="btn formBg btn-block mt-3 text-capitalize px-4">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
 

