    <%- include('../header')-%>

    <%- include('./partials/banner')-%>
<div class="bg-lighter pt-5 pb-5 mb-5">
    <div class="container">
        <div class="heading text-center mb-4">
            <h2 class="title">Recent Arrivals</h2><!-- End .title -->
            <p class="title-desc">Aliquam tincidunt mauris eurisus</p><!-- End .title-desc -->
        </div><!-- End .heading -->

        <div class="owl-carousel owl-simple" data-toggle="owl" 
            data-owl-options='{
                "nav": false, 
                "dots": true,
                "margin": 20,
                "loop": false,
                "responsive": {
                    "0": {
                        "items":2
                    },
                    "480": {
                        "items":2
                    },
                    "768": {
                        "items":3
                    },
                    "992": {
                        "items":4
                    },
                    "1200": {
                        "items":4,
                        "nav": true
                    }
                }
            }'>
            <div class="container">
                
                <div class="row">
                    <%product.forEach((item,i)=>{%>
                        <div class="col-sm-3 product product-4 mt-5 pt-2  " >
		
                            <figure class="product-media ">
                                <a href="/product-detail?id=<%=item._id%>">
                                    
                                     
                                    <img style="width: 308px;height: 425px "class="img-fluid "  src="/admin/assets/uploads/<%=item.images[0]%>" alt="<%= product[i].productName%>">
                                    
                                </a>
                        
                            
                            </figure><!-- End .product-media -->
                        
                            <div class="product-body">
                                <div class="product-cat">
                                    <a href="#"><%= product[i].category%></a>
                                </div><!-- End .product-cat -->
                                <h3 class="product-title text-capitalize"><a href="/product"><%= product[i].productName%></a></h3><!-- End .product-title -->
                                <div class="product-price">
                                  &#8377  <%= product[i].price%>
                                </div><!-- End .product-price -->
                                
                            </div><!-- End .product-body -->
                        </div><!-- End .product -->
                <%})%>
                 
                </div><!-- End .row -->

           
        </div><!-- End .owl-carousel -->
    </div><!-- End .container -->
</div><!-- End .bg-lighter pt-5 pb-5 -->


</div>
</div>
    
</body>
</html>